<h2>Show image</h2>

<ul class="list-unstyled">
  <li>
    <strong>User:</strong>
    <%= @image.user_id %>
  </li>

  <li>
    <%= tag :img, src: @image.url %>
    <strong>Url:</strong><%= @image.url %>
  </li>

  <li>
    <strong>Tags:</strong>
    <%= for tag <- @image.tags do %>
      <span class="tag label label-primary"><%= tag %></span>
    <% end %>
  </li>

</ul>

<%= link "Edit", to: image_path(@conn, :edit, @image) %>
<%= link "Back", to: image_path(@conn, :index) %>
